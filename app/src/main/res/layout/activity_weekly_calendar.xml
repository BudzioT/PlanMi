<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_pink"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Go Back"
        android:id="@+id/calendar_weekly_back_btn"
        android:src="?attr/actionModeCloseDrawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="70dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/daily_calendar_btn"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Daily"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/inactive_day" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/weekly_calendar_btn"
                android:text="Weekly"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/active_day" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/monthly_calendar_btn"
                android:gravity="center"
                android:clickable="true"
                android:text="Monthly"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/inactive_day" />
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_marginTop="30dp">

        <Button
            android:id="@+id/prev_week_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:text="@string/prev"
            android:textColor="@color/less_light_pink"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="2"
            android:id="@+id/dateTextView"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="20日 12月  —  27日 12月 2025年"
            android:textSize="22sp"
            android:textColor="@color/light_pink"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="@string/next"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/less_light_pink"
            android:background="@android:color/transparent"
            android:id="@+id/next_week_btn"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="月"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_pink" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="火"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_pink" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="水"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_pink" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="木"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_pink" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="金"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_pink" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="土"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_pink" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="日"
                android:layout_marginTop="40dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/light_pink" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>