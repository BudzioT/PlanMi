                    android:paddingEnd="15dp"
                    android:id="@+id/daily_calendar_btn"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Daily"
                    android:clickable="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/inactive_day" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingEnd="15dp"
                    android:clickable="true"
                    android:id="@+id/weekly_calendar_btn"
                    android:text="Weekly"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/active_day" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/monthly_calendar_btn"
                    android:gravity="center"
                    android:clickable="true"
                    android:text="Monthly"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/inactive_day" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/prev_week_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:text="@string/prev"
                    android:textColor="@color/less_light_pink"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:id="@+id/dateTextView"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="3週 12月 2025年"
                    android:textSize="22sp"
                    android:textColor="@color/light_pink"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="@string/next"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/less_light_pink"
                    android:background="@android:color/transparent"
                    android:id="@+id/next_week_btn"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

